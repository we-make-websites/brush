{% comment %}
------------------------------------------------------------------------------
  <%= liquidTitleCase %>: <%= name %> (<%= handle %>)
------------------------------------------------------------------------------
{% endcomment %}
<section
  data-component-handle="<%= handle %>"
  data-component-type="<%= load %>"
>
  <<%= handle %>
    v-if="getComponentVisible('<%= handle %>')"
    v-cloak
    :liquid="{
      sectionId: {{ section.id | json | escape }}
    }"
  ></<%= handle %>>

  {% comment %}
  -----------------------------------------------------------------------------
    Loading state.
  -----------------------------------------------------------------------------
  {% endcomment %}
  <div v-if="!getComponentActive('<%= handle %>')">
    <div class="<%= handle %> is-loading critical-component-hide liquid">
      <h2 class="<%= handle %>__title">
        Title
      </h2>
    </div>
  </div>
</section>

{% schema '<%= handle %>' %}
